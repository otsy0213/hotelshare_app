<h3>マイページ</h3>
  <table>
  　<tr>
      <th>画像</th>
      <td>
        <% if @user.image? %>
          <%= image_tag @user.image.url, width: 100 %>
        <% else %>
          <%= image_tag("/user_images/default_user.jpeg") %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>性別</th>
      <td><%= @user.gender %></td>
    </tr>
    <tr>
      <th>年齢</th>
      <td><%= @user.age %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.mail %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= @user.introduction %></td>
    </tr>
  </table>
  <h3>予約一覧</h3>
  
  <div>
      <%= link_to "プロフィール編集", edit_user_path %>
  </div>