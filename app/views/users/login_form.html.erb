<h1>ログイン画面</h1>
<%= form_with url: login_path do |f| %> 
  <ul>
    <li>
        <%= f.label :mail, 'メールアドレス' %>
      　<%= f.text_field :mail %>
    </li>
    <li>
        <%= f.label :password_digest, 'パスワード' %>
        <%= f.password_field :password_digest %>
    </li>
    <li>
        <%= f.submit "ログインする"%>
    </li>
  </ul>
<% end %>