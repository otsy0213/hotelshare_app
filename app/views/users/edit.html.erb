<h3>ユーザー編集</h3>
<%= form_with model: @user do |form| %>
  <table>
  　<tr>
      <th>プロフィール画像</th>
      <td><%= form.file_field :image %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= form.text_field :name %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= form.text_area :introduction %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td><%= form.password_field :password %></td>
    </tr>
    <tr>
      <th>パスワード確認用</th>
      <td><%= form.password_field :password_confirmation %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= form.submit "上記の内容に編集する" %></li>
    </ul>
  </div>
<% end %>