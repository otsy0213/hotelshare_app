<h3>ユーザ登録画面</h3>
<%= form_for @user do |f| %>
  <table>
  　<tr>
      <th><%= f.label :image ,"プロフィール画像" %></th>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name, placeholder: "ユーザ名"%></td>
    </tr>
    <tr>
      <th><%= f.label :gender ,"性別" %></th>
      <td><%= f.label :gender ,"男" %>
          <%= f.radio_button :gender, 1 %>
          <%= f.label :gender ,"女" %>
          <%= f.radio_button :gender, 2 %></td>
    </tr>
    <tr>
      <th><%= f.label :age ,"年齢" %></th>
      <td><%= f.text_field :age, placeholder: "年齢"%></td>
    </tr>

    <tr>
      <th><%= f.label :mail ,"メールアドレス" %></th>
      <td><%= f.text_field :mail, placeholder: "メールアドレス"%></td>
    </tr>
    
    <tr>
      <th><%= f.label :password_digest ,"パスワード" %></th>
      <td><%= f.password_field :password_digest, placeholder: "パスワード"%></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"自己紹介" %></th>
      <td><%= f.text_area :introduction, placeholder: "軽い自己紹介"%></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "会員登録する"%></li>
    </ul>
  </div>
<% end %>
